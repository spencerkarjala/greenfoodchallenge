<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="5dp">

    <TextView
        android:text="Your current weekly servings of _____ is _____"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/current_servings"/>

    <TextView
        android:text="This amount of servings produces _____ kg/CO2e per year"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/current_CO2e"/>

    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="See the impact that changing this could have:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/user_servings_edit"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="New Servings Amount"
        android:inputType="number"/>



</LinearLayout>